<style>

.style-community-section {
  background-color: var(--background-color);
  padding: 60px 20px;
  position: relative;
}

.style-community-section .container {
  max-width: 1200px;
  margin: 0 auto;
}

.section-title {
  font-size: var(--title-size-desktop);
  color: var(--title-color-desktop);
  font-weight: bold;
  letter-spacing: 1px;
  margin: 0 0 20px 0;
  line-height: 1.2;
}

.section-subtitle {
  font-size: var(--subtitle-size-desktop);
  color: var(--subtitle-color-desktop);
  margin: 0 0 50px 0;
  line-height: 1.5;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
  margin-bottom: 50px;
}

.categories-wrapper {
  position: relative;
}

.categories-grid {
  display: flex;
  gap: var(--gap-desktop);
  overflow-x: auto;
  overflow-y: hidden;
  padding-bottom: 10px;
  scroll-behavior: smooth;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
  -ms-overflow-style: none;
}

.categories-grid::-webkit-scrollbar {
  display: none;
}

.category-item {
  flex: 0 0 200px;
  width: 200px;
}

.category-link {
  display: block;
  text-decoration: none;
  color: inherit;
  transition: transform 0.3s ease;
}

.category-link:hover {
  transform: translateY(-5px);
}

.image-container {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  border-radius: 15px;
  overflow: hidden;
  margin-bottom: 15px;
  background: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.category-link:hover .image-container img {
  transform: scale(1.05);
}

.placeholder-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  position: absolute;
  bottom: 15px;
  right: 15px;
  width: 32px;
  height: 32px;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
}

.category-link:hover .arrow-icon {
  background: rgba(255, 255, 255, 1);
  transform: scale(1.1);
}

.category-text {
  font-size: var(--text-size-desktop);
  color: var(--text-color);
  font-weight: bold;
  letter-spacing: 0.5px;
  margin: 0;
  text-transform: uppercase;
}

.category-nav {
  position: absolute;
  top: 50%;
  width: 44px;
  height: 44px;
  border-radius: 999px;
  border: none;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  opacity: 0;
  pointer-events: none;
  transform: translateY(-50%);
  transition: opacity 0.3s ease;
}

.categories-wrapper:hover .category-nav {
  opacity: 1;
  pointer-events: auto;
}

.category-nav--next {
  right: 0;
  transform: translate(60%, -50%);
}

.category-nav--prev {
  left: 0;
  transform: translate(-60%, -50%);
}

.category-nav svg {
  width: 14px;
  height: 14px;
  fill: none;
  stroke: currentColor;
  stroke-width: 2;
  stroke-linecap: round;
  stroke-linejoin: round;
}

/* Responsive Design */

/* Tablette */
@media screen and (max-width: 1024px) {
  .style-community-section {
    padding: 50px 20px;
  }
  
  .section-title {
    font-size: var(--title-size-tablet);
  }
  
  .section-subtitle {
    font-size: var(--subtitle-size-tablet);
    margin-bottom: 40px;
  }
  
  .category-text {
    font-size: var(--text-size-tablet);
  }
  
  .categories-grid {
    gap: var(--gap-tablet);
  }
  
  .category-item {
    flex: 0 0 180px;
    width: 180px;
  }
}

/* Mobile */
@media screen and (max-width: 768px) {
  .style-community-section {
    padding: 40px 15px;
  }
  
  .section-title {
    font-size: var(--title-size-mobile);
  }
  
  .section-subtitle {
    font-size: var(--subtitle-size-mobile);
    margin-bottom: 35px;
  }
  
  .category-text {
    font-size: var(--text-size-mobile);
  }
  
  .categories-grid {
    gap: var(--gap-mobile);
  }
  
  .category-item {
    flex: 0 0 160px;
    width: 160px;
  }
  
  .arrow-icon {
    width: 28px;
    height: 28px;
    bottom: 12px;
    right: 12px;
  }
  
  .arrow-icon svg {
    width: 14px;
    height: 14px;
  }
}

/* Très petit mobile */
@media screen and (max-width: 480px) {
  .categories-grid {
    gap: var(--gap-mobile);
  }
  
  .category-item {
    flex: 0 0 140px;
    width: 140px;
  }
  
  .image-container {
    margin-bottom: 12px;
  }
}

