<div class="style-community-section" style="
  --title-color-desktop: {{ section.settings.title_color }};
  --subtitle-color-desktop: {{ section.settings.subtitle_color }};
  --title-size-desktop: {{ section.settings.title_size_desktop }}px;
  --subtitle-size-desktop: {{ section.settings.subtitle_size_desktop }}px;
  --title-size-tablet: {{ section.settings.title_size_tablet }}px;
  --subtitle-size-tablet: {{ section.settings.subtitle_size_tablet }}px;
  --title-size-mobile: {{ section.settings.title_size_mobile }}px;
  --subtitle-size-mobile: {{ section.settings.subtitle_size_mobile }}px;
  --background-color: {{ section.settings.background_color }};
  --text-color: {{ section.settings.text_color }};
  --text-size-desktop: {{ section.settings.text_size_desktop }}px;
  --text-size-tablet: {{ section.settings.text_size_tablet }}px;
  --text-size-mobile: {{ section.settings.text_size_mobile }}px;
  --gap-desktop: {{ section.settings.gap_desktop }}px;
  --gap-tablet: {{ section.settings.gap_tablet }}px;
  --gap-mobile: {{ section.settings.gap_mobile }}px;
">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="section-title" style="text-align: {{ section.settings.title_alignment }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="section-subtitle" style="text-align: {{ section.settings.subtitle_alignment }};">
        {{ section.settings.subtitle }}
      </p>
    {% endif %}
    
    <div class="categories-wrapper">
      <div class="categories-grid">
        {% assign default_images = "https://images.pexels.com/photos/27256447/pexels-photo-27256447.jpeg|https://images.pexels.com/photos/27274312/pexels-photo-27274312.jpeg|https://images.pexels.com/photos/27598915/pexels-photo-27598915.jpeg|https://images.pexels.com/photos/27298281/pexels-photo-27298281.jpeg|https://images.pexels.com/photos/8321937/pexels-photo-8321937.jpeg" | split: "|" %}
        {% assign defaults_count = default_images.size %}
        {% for block in section.blocks %}
          {% assign idx = forloop.index0 | modulo: defaults_count %}
          {% assign fallback_image = default_images[idx] %}
          <div class="category-item" data-original="true" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.link | default: '#' }}" class="category-link">
              <div class="image-container">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url: width: 400 }}" 
                       alt="{{ block.settings.text | escape }}"
                       loading="lazy">
                {% else %}
                  <img src="{{ fallback_image }}" 
                       alt="{{ block.settings.text | default: 'Category image' | escape }}"
                       loading="lazy">
                {% endif %}
                <div class="arrow-icon">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
              {% if block.settings.text != blank %}
                <p class="category-text" style="text-align: {{ block.settings.text_alignment }};">
                  {{ block.settings.text }}
                </p>
              {% endif %}
            </a>
          </div>
        {% endfor %}
      </div>
      <button type="button" class="category-nav category-nav--next" aria-label="Voir les catégories suivantes">
        <svg viewBox="0 0 24 24">
          <path d="M8 5l8 7-8 7"/>
        </svg>
      </button>
      <button type="button" class="category-nav category-nav--prev" aria-label="Voir les catégories précédentes">
        <svg viewBox="0 0 24 24">
          <path d="M16 5l-8 7 8 7"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  (function() {
    const sectionId = '{{ section.id }}';
    const sectionEl = document.getElementById('shopify-section-' + sectionId);
    if (!sectionEl) return;
    const grid = sectionEl.querySelector('.categories-grid');
    const prevBtn = sectionEl.querySelector('.category-nav--prev');
    const nextBtn = sectionEl.querySelector('.category-nav--next');
    if (!grid || !prevBtn || !nextBtn) return;

    const getStepSize = () => {
      const first = grid.querySelector('.category-item');
      if (!first) return grid.clientWidth || 0;
      const rect = first.getBoundingClientRect();
      const gap = parseFloat(getComputedStyle(grid).gap || '0');
      return rect.width + gap;
    };

    const maxScroll = () => Math.max(0, grid.scrollWidth - grid.clientWidth);

    const clamp = (value) => Math.min(maxScroll(), Math.max(0, value));

    const scrollTo = (value) => {
      grid.scrollTo({ left: clamp(value), behavior: 'smooth' });
    };

    const updateNavState = () => {
      const tolerance = 1;
      const left = grid.scrollLeft;
      const right = maxScroll();
      const atStart = left <= tolerance;
      const atEnd = right - left <= tolerance;

      prevBtn.disabled = atStart;
      prevBtn.setAttribute('aria-disabled', String(atStart));
      nextBtn.disabled = atEnd;
      nextBtn.setAttribute('aria-disabled', String(atEnd));
    };

    const scrollByStep = (delta) => {
      const target = grid.scrollLeft + delta;
      scrollTo(target);
    };

    prevBtn.addEventListener('click', () => scrollByStep(-getStepSize()));
    nextBtn.addEventListener('click', () => scrollByStep(getStepSize()));

    grid.addEventListener('wheel', (event) => {
      if (Math.abs(event.deltaY) > Math.abs(event.deltaX)) {
        event.preventDefault();
        scrollTo(grid.scrollLeft + event.deltaY);
      }
    }, { passive: false });

    grid.addEventListener('scroll', updateNavState);
    window.addEventListener('resize', updateNavState);

    updateNavState();
  })();
</script>

