{% schema %}
{
  "name": "Infinite Logo Slider",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Couleur de fond",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Hauteur (desktop en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "height_tablet",
      "label": "Hauteur (tablette en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Hauteur (mobile en px)",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 60
    },
    {
      "type": "range",
      "id": "speed_desktop",
      "label": "Vitesse (desktop, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 40
    },
    {
      "type": "range",
      "id": "speed_tablet",
      "label": "Vitesse (tablette, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 30
    },
    {
      "type": "range",
      "id": "speed_mobile",
      "label": "Vitesse (mobile, secondes)",
      "min": 5,
      "max": 100,
      "step": 1,
      "default": 20
    },
    {
      "type": "range",
      "id": "logo_size_desktop",
      "label": "Largeur logo (desktop en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 250
    },
    {
      "type": "range",
      "id": "logo_size_tablet",
      "label": "Largeur logo (tablette en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "logo_size_mobile",
      "label": "Largeur logo (mobile en px)",
      "min": 50,
      "max": 500,
      "step": 10,
      "default": 150
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infinite Logo Slider",
      "category": "Image"
    }
  ]
}
{% endschema %}

{% assign default_logos_string = "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 240 120'><rect width='240' height='120' fill='%23000000'/><text x='50%25' y='58%25' text-anchor='middle' font-family='Helvetica Neue, Arial, sans-serif' font-size='54' fill='%23ffffff' letter-spacing='8'>ELLE</text></svg>|data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 240 120'><rect width='240' height='120' fill='%23000000'/><text x='50%25' y='56%25' text-anchor='middle' font-family='Georgia, serif' font-size='40' fill='%23ffffff'>Les Echos</text></svg>|data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 240 120'><rect width='240' height='120' fill='%23000000'/><text x='50%25' y='52%25' text-anchor='middle' font-family='Times New Roman, serif' font-size='38' fill='%23ffffff'>Le Monde</text><path d='M60 80h120' stroke='%23ffffff' stroke-width='3'/></svg>|data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 240 120'><rect width='240' height='120' fill='%23000000'/><text x='50%25' y='62%25' text-anchor='middle' font-family='Didot, serif' font-size='48' fill='%23ffffff' letter-spacing='6'>VOGUE</text></svg>|data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 260 120'><rect width='260' height='120' fill='%23000000'/><text x='50%25' y='52%25' text-anchor='middle' font-family='Futura, sans-serif' font-size='32' fill='%23ffffff' letter-spacing='4'>COSMOPOLITAN</text><text x='50%25' y='86%25' text-anchor='middle' font-family='Futura, sans-serif' font-size='26' fill='%23ffffff' letter-spacing='3'>L'OFFICIEL</text></svg>" %}
{% assign default_logos = default_logos_string | split: "|" %}

{% assign has_blocks = section.blocks | size %}

<div class="logo-slider" style="background-color: {{ section.settings.background_color | default: '#000000' }};">
  <div class="slide-track">
    {% if has_blocks > 0 %}
      {% assign total_defaults = default_logos | size %}
      {% for block in section.blocks %}
        {% assign idx = forloop.index0 | modulo: total_defaults %}
        {% assign fallback_logo = default_logos[idx] %}
        <div class="slide">
          {% if block.settings.logo_image != blank %}
            <img src="{{ block.settings.logo_image | image_url: width: 800 }}" alt="logo">
          {% else %}
            <img src="{{ fallback_logo }}" alt="logo">
          {% endif %}
        </div>
      {% endfor %}
      {% for block in section.blocks %}
        {% assign idx = forloop.index0 | modulo: total_defaults %}
        {% assign fallback_logo = default_logos[idx] %}
        <div class="slide">
          {% if block.settings.logo_image != blank %}
            <img src="{{ block.settings.logo_image | image_url: width: 800 }}" alt="logo">
          {% else %}
            <img src="{{ fallback_logo }}" alt="logo">
          {% endif %}
        </div>
      {% endfor %}
    {% else %}
      {% for logo in default_logos %}
        <div class="slide">
          <img src="{{ logo }}" alt="logo">
        </div>
      {% endfor %}
      {% for logo in default_logos %}
        <div class="slide">
          <img src="{{ logo }}" alt="logo">
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

<style>
.logo-slider {
  position: relative;
  overflow: hidden;
  margin: auto;
}

.logo-slider .slide-track {
  display: flex;
  width: max-content;
}

.logo-slider .slide {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000000;
}

.logo-slider .slide img {
  height: auto;
  display: block;
}

/* Desktop */
@media (min-width: 1025px) {
  .logo-slider {
    height: {{ section.settings.height_desktop }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-desktop {{ section.settings.speed_desktop }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_desktop }}px;
  }
}

/* Tablet */
@media (min-width: 768px) and (max-width: 1024px) {
  .logo-slider {
    height: {{ section.settings.height_tablet }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-tablet {{ section.settings.speed_tablet }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_tablet }}px;
  }
}

/* Mobile */
@media (max-width: 767px) {
  .logo-slider {
    height: {{ section.settings.height_mobile }}px;
  }
  .logo-slider .slide-track {
    animation: scroll-mobile {{ section.settings.speed_mobile }}s linear infinite;
  }
  .logo-slider .slide img {
    width: {{ section.settings.logo_size_mobile }}px;
  }
}

@keyframes scroll-desktop {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes scroll-tablet {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
@keyframes scroll-mobile {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}
</style>