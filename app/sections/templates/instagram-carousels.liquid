        <div class="carousel-track" style="gap: {{ section.settings.card_spacing }}px;">
          {% for block in section.blocks %}
            {% assign idx = forloop.index0 %}
            {% if default_images.size > 0 %}
              {% assign idx = idx | modulo: default_images.size %}
            {% endif %}
            {% assign fallback_image = default_images[idx] %}
            {% assign fallback_likes = default_likes[idx] %}
            {% assign fallback_comments = default_comments[idx] %}
