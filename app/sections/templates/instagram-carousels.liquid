{% comment %}
  Section Instagram Style Carousel
  Paramètres configurables via l'interface Shopify
{% endcomment %}

{{ 'section-instagram-carousel.css' | asset_url | stylesheet_tag }}

<div class="instagram-carousel-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="section-title" style="margin-left:30px; font-size: {{ section.settings.title_size_desktop }}px; color: {{ section.settings.text_color }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="carousel-wrapper" style="padding-left: {{ section.settings.padding_left_desktop }}px; padding-right: {{ section.settings.padding_right_desktop }}px;">
      <button class="carousel-btn carousel-btn-prev" 
              style="background-color: {{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_text_color }};"
              aria-label="Précédent">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="carousel-container">
        <div class="carousel-track" style="gap: {{ section.settings.card_spacing }}px;">
          {% for block in section.blocks %}
            <div class="carousel-card" 
                 data-desktop-width="{{ section.settings.card_width_desktop }}"
                 data-desktop-height="{{ section.settings.card_height_desktop }}"
                 data-mobile-width="{{ section.settings.card_width_mobile }}"
                 data-mobile-height="{{ section.settings.card_height_mobile }}">
              <a href="{{ block.settings.product.url }}{% if block.settings.variant_id != blank %}?variant={{ block.settings.variant_id }}{% endif %}" class="card-link">
                <div class="card-image">
                  {% if block.settings.image != blank %}
                    <img 
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="placeholder-image">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}
                </div>

                <div class="card-stats" style="color: {{ section.settings.text_color }};">
                  <div class="stat-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                    <span>{{ block.settings.likes_count }}</span>
                  </div>

                  <div class="stat-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                    </svg>
                    <span>{{ block.settings.comments_count }}</span>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
          
          <!-- Clone des cartes pour l'effet infini -->
          {% for block in section.blocks %}
            <div class="carousel-card carousel-card-clone" 
                 data-desktop-width="{{ section.settings.card_width_desktop }}"
                 data-desktop-height="{{ section.settings.card_height_desktop }}"
                 data-mobile-width="{{ section.settings.card_width_mobile }}"
                 data-mobile-height="{{ section.settings.card_height_mobile }}">
              <a href="{{ block.settings.product.url }}{% if block.settings.variant_id != blank %}?variant={{ block.settings.variant_id }}{% endif %}" class="card-link">
                <div class="card-image">
                  {% if block.settings.image != blank %}
                    <img 
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="placeholder-image">
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    </div>
                  {% endif %}
                </div>

                <div class="card-stats" style="color: {{ section.settings.text_color }};">
                  <div class="stat-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                    </svg>
                    <span>{{ block.settings.likes_count }}</span>
                  </div>

                  <div class="stat-item">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
                    </svg>
                    <span>{{ block.settings.comments_count }}</span>
                  </div>
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>

      <button class="carousel-btn carousel-btn-next" 
              style="background-color: {{ section.settings.btn_bg_color }}; color: {{ section.settings.btn_text_color }};"
              aria-label="Suivant">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
