                 data-desktop-width="{{ section.settings.card_width_desktop }}"
                 data-desktop-height="{{ section.settings.card_height_desktop }}"
                 data-mobile-width="{{ section.settings.card_width_mobile }}"
                 data-mobile-height="{{ section.settings.card_height_mobile }}">
              <a href="{{ block.settings.product.url }}{% if block.settings.variant_id != blank %}?variant={{ block.settings.variant_id }}{% endif %}" class="card-link">
                <div class="card-image">
                  {% if block.settings.image != blank %}
                    <img 
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                    >
                  {% else %}
                    <img 
                      src="{{ fallback_image }}"
                      alt="{{ fallback_likes }} likes"
                      loading="lazy"
                    >
                  {% endif %}
                </div>

