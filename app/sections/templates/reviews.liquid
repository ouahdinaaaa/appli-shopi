<section class="reviews-section">
  <style>
  .reviews-section {
    --avatar-size: {{ section.settings.avatar_size_desktop | append: 'px' }};
  }

  @media (max-width: 768px) {
    .reviews-section {
      --avatar-size: {{ section.settings.avatar_size_mobile | append: 'px' }};
    }
  }
</style>

  <h2 class="reviews-title">{{ section.settings.section_title }}</h2>

  <div class="reviews-content">
    <div class="reviews-summary">
      <div class="customer-reviews-block">
        <h3>{{ section.settings.customer_reviews_title }}</h3>

        <div class="average-rating-row" aria-label="Note moyenne">
          <div class="average-rating-number">{{ section.settings.average_rating }}</div>
          <div class="average-rating-stars">
            {% assign full_stars = section.settings.average_rating | floor %}
            {% for i in (1..5) %}
              {% if i <= full_stars %}
                <span class="star full">&#9733;</span>
              {% else %}
                <span class="star empty">&#9733;</span>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <div class="reviews-count">
          Basé sur {{ section.settings.total_reviews }} avis
        </div>

        <div class="ratings-list">
          {% assign total_reviews = section.settings.total_reviews | plus: 0 %}

          {% assign rating_data = 
            "5:rating_count_5,4:rating_count_4,3:rating_count_3,2:rating_count_2,1:rating_count_1" | split: "," 
          %}

          {% for pair in rating_data %}
            {% assign parts = pair | split: ":" %}
            {% assign star = parts[0] %}
            {% assign setting_key = parts[1] %}
            {% assign count = section.settings[setting_key] | plus: 0 %}
            <div class="rating-row">
              <div class="stars-row" aria-label="{{ star }} étoiles">
                {% assign star_int = star | plus: 0 %}
                {% assign empty_stars = 5 | minus: star_int %}
                {% for i in (1..star_int) %}<span class="star full">&#9733;</span>{% endfor %}
                {% for i in (1..empty_stars) %}<span class="star empty">&#9733;</span>{% endfor %}
              </div>
              <div class="bar-container" role="progressbar">
                {% assign key = "jauge_" | append: star | append: "_etoiles" %}
                {% assign jauge_image = section.settings[key] %}
                {% if jauge_image %}
                  <img 
                    src="{{ jauge_image | image_url: width: 200 }}" 
                    alt="Jauge {{ star }} étoiles" 
                    class="jauge-image"
                  >
                {% else %}
                  <div class="jauge-placeholder">
                    + Ajouter image
                  </div>
                {% endif %}
              </div>
              <div class="rating-count">{{ count }}</div>
            </div>
          {% endfor %}

        </div>
      </div>
    </div>
  
    <!-- Liste des avis clients dynamiques 2nd bloc-->
    <div class="reviews-list">
      {% for block in section.blocks %}
        <div class="review-item">
          <div class="review-header">
            <div class="avatar">
              {% if block.settings.avatar_image %}
                <img src="{{ block.settings.avatar_image | image_url: width: 100, height: 100 }}" alt="Avatar de {{ block.settings.name }}">
              {% elsif section.settings.default_avatar %}
                <img src="{{ section.settings.default_avatar | image_url: width: 100, height: 100 }}" alt="Avatar par défaut">
              {% else %}
                <div class="avatar-placeholder">&#128100;</div>
              {% endif %}
            </div>

            <div class="reviewer-info">
              <div class="name-verified">
                <span class="reviewer-name">{{ block.settings.name }}</span>
                <span class="verified">Vérifié</span>
              </div>
              <div class="review-stars" aria-label="Note donnée">
                {% assign review_stars = block.settings.review_stars | plus: 0 %}
                {% for i in (1..5) %}
                  {% if i <= review_stars %}
                    <span class="star full">&#9733;</span>
                  {% else %}
                    <span class="star empty">&#9733;</span>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
            <div class="review-date">{{ block.settings.date }}</div>
          </div>
          <div class="review-content">
            <h4 class="review-title">{{ block.settings.title }}</h4>
            <p class="review-text">{{ block.settings.text }}</p>
          </div>
          <div class="review-footer">
            <div class="review-likes">
              <span class="thumb-up" aria-label="Pouces j'aime">&#128077;</span> <span class="likes-count">{{ block.settings.likes }}</span>
              <span class="thumb-down" aria-label="Pouces pas j'aime">&#128078;</span> <span class="dislikes-count">{{ block.settings.dislikes }}</span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="buttons-container">
    <button class="view-more-btn">{{ section.settings.view_more_text }}</button>
    <button class="view-less-btn" style="display: none;">{{ section.settings.view_less_text }}</button>
  </div>
</section>

