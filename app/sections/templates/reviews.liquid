<script>document.addEventListener('DOMContentLoaded', function() {
  const moreBtn = document.querySelector('.view-more-btn');
  const lessBtn = document.querySelector('.view-less-btn');
  if (!moreBtn || !lessBtn) return;

  const reviews = document.querySelectorAll('.review-item');
  const increment = 5;
  let visibleCount = increment;

  // Cacher les avis sauf les 5 premiers
  reviews.forEach((review, index) => {
    if (index >= increment) {
      review.classList.add('review-hidden');
    }
  });

  // Bouton "Voir plus"
  moreBtn.addEventListener('click', function() {
    const nextCount = visibleCount + increment;
    for (let i = visibleCount; i < nextCount && i < reviews.length; i++) {
      reviews[i].classList.remove('review-hidden');
    }
    visibleCount = nextCount;

    // Si plus de 5 avis visibles → afficher "Voir moins"
    if (visibleCount > increment) {
      lessBtn.style.display = 'inline-block';
    }

    // Si on a tout affiché, on garde quand même "Voir moins"
    if (visibleCount >= reviews.length) {
      moreBtn.style.display = 'inline-block';
    }
  });

  // Bouton "Voir moins"
  lessBtn.addEventListener('click', function() {
    reviews.forEach((review, index) => {
      if (index >= increment) {
        review.classList.add('review-hidden');
      }
    });
    visibleCount = increment;

    // Revenir à l’état initial
    lessBtn.style.display = 'none';
    moreBtn.style.display = 'inline-block';
  });
});

</script>

