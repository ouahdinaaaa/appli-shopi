<div class="featured-products-{{ section.id }}">
  <h2 class="section-title">
    {{ section.settings.section_title }}
  </h2>
  {%- comment -%} (reste du bloc existant inchangé) {%- endcomment -%}
  {% assign default_before_images = 'https://images.pexels.com/photos/16702313/pexels-photo-16702313.jpeg?auto=compress&cs=tinysrgb&w=900&h=600,https://images.pexels.com/photos/2735981/pexels-photo-2735981.jpeg?auto=compress&cs=tinysrgb&w=900&h=600,https://images.pexels.com/photos/32622561/pexels-photo-32622561.jpeg?auto=compress&cs=tinysrgb&w=900&h=600' | split: ',' %}
  {% assign default_after_images  = 'https://images.pexels.com/photos/32652453/pexels-photo-32652453.jpeg?auto=compress&cs=tinysrgb&w=900&h=600,https://images.pexels.com/photos/17486880/pexels-photo-17486880.jpeg?auto=compress&cs=tinysrgb&w=900&h=600,https://images.pexels.com/photos/16438670/pexels-photo-16438670.jpeg?auto=compress&cs=tinysrgb&w=900&h=600' | split: ',' %}
  {% assign first_block = section.blocks.first %}
  {% assign hero_initial = default_after_images[1] %}
  {% if hero_initial == blank %}{% assign hero_initial = default_after_images[0] %}{% endif %}
  {% if first_block and first_block.settings.after_image != blank %}
    {% assign hero_initial = first_block.settings.after_image | image_url: width: 1200 %}
  {% endif %}

  <div class="main-container">
    <div class="hero-image-container">
      <img id="hero-image-{{ section.id }}" src="{{ hero_initial }}" alt="Featured" class="hero-image" loading="lazy">
      <div class="hero-content">
        <h3 id="hero-title-{{ section.id }}" class="hero-title">
          {% if first_block and first_block.settings.custom_title != blank %}
            {{ first_block.settings.custom_title }}
          {% elsif first_block and first_block.settings.product %}
            {{ first_block.settings.product.title }}
          {% else %}
            {{ section.settings.section_title | default: 'Featured Product' }}
          {% endif %}
        </h3>
        <p id="hero-subtitle-{{ section.id }}" class="hero-subtitle">{{ section.settings.hero_subtitle | default: 'Summer essentials and more' }}</p>
      </div>
      <div class="nav-arrows">
        <button class="nav-arrow" onclick="changeProduct('{{ section.id }}','prev')">
          <svg viewBox="0 0 24 24"><path d="M15.41 7.41 14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
        </button>
        <button class="nav-arrow" onclick="changeProduct('{{ section.id }}','next')">
          <svg viewBox="0 0 24 24"><path d="M10 6 8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
        </button>
      </div>
    </div>

    <div class="products-section" style="flex:1;">
      <div class="products-scroll" id="products-scroll-{{ section.id }}">
        {% for block in section.blocks %}
          {% assign product = block.settings.product %}
          {% assign i = forloop.index0 %}
          {% assign before_idx = i | modulo: default_before_images.size %}
          {% assign after_idx  = i | modulo: default_after_images.size %}

          {%- comment -%} Vignette (before) {%- endcomment -%}
          {% assign thumb_src = default_before_images[before_idx] %}
          {% if block.settings.custom_image != blank %}
            {% assign thumb_src = block.settings.custom_image | image_url: width: 400 %}
          {% elsif product and product.featured_image %}
            {% assign thumb_src = product.featured_image | image_url: width: 400 %}
          {% endif %}

          {%- comment -%} Héros (after) {%- endcomment -%}
          {% assign hero_src = default_after_images[after_idx] %}
          {% if block.settings.after_image != blank %}
            {% assign hero_src = block.settings.after_image | image_url: width: 1200 %}
          {% endif %}

          {% assign card_title = block.settings.custom_title | default: product.title | default: 'Produit ' | append: forloop.index %}

    <div class="product-card {% if forloop.first %}active{% endif %}"
      data-index="{{ i }}" data-original-index="{{ i }}"
               data-title="{{ card_title | escape }}"
               data-image="{{ thumb_src }}"
               data-hero-image="{{ hero_src }}"
               data-variant-id="{% if product %}{{ product.selected_or_first_available_variant.id }}{% endif %}"
               data-available="{% if product and product.selected_or_first_available_variant.available %}true{% else %}false{% endif %}"
               onclick="selectProduct('{{ section.id }}', {{ i }}, this)">
            <div class="product-image-container">
              <img src="{{ thumb_src }}" alt="{{ card_title | escape }}" class="product-image" loading="lazy">
            </div>
            <div class="product-info">
              <h4 class="product-title">{{ card_title }}</h4>
              <p class="product-price">
                {% if product %}
                  {{ product.price | money }}
                {% else %}
                  —
                {% endif %}
              </p>
              {% if product %}
                <button
                  class="add-to-cart-btn"
                  onclick="addToCart(event, this)"
                  {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}>
                  {{ section.settings.button_text | default: 'Shop Now' }}
                </button>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
let currentProductIndex = {};
let isDragScrolling = {}; // par section

function getWrap(sectionId) {
  return document.querySelector('.featured-products-' + sectionId);
}
function getScroller(sectionId) {
  return document.getElementById('products-scroll-' + sectionId);
}
function getCards(sectionId) {
  const wrap = getWrap(sectionId);
  return wrap ? [...wrap.querySelectorAll('.product-card')] : [];
}

function scrollCardIntoView(sectionId, card, instant = false) {
  const scroller = getScroller(sectionId);
  if (!scroller || !card) return;
  const targetLeft = card.offsetLeft - 10; // marge visuelle
  scroller.scrollTo({ left: targetLeft, behavior: instant ? 'auto' : 'smooth' });
}

function updateHeroFromCard(sectionId, card) {
  const hero = document.getElementById('hero-image-' + sectionId);
  const title = document.getElementById('hero-title-' + sectionId);
  if (!card || !hero) return;
  const img = card.getAttribute('data-hero-image') || card.getAttribute('data-image');
  const txt = card.getAttribute('data-title') || '';
  if (img) {
    hero.style.opacity = '.35';
    const tmp = new Image();
    tmp.onload = () => { hero.src = img; hero.style.opacity = '1'; };
    tmp.src = img;
  }
  if (title) title.textContent = txt;
}

function selectProduct(sectionId, index, el, instant = false) {
  // Bloquer la sélection si c'était un drag
  if (isDragScrolling[sectionId]) return;

  const wrap = getWrap(sectionId);
  if (!wrap || !el) return;

  currentProductIndex[sectionId] = index;
  wrap.querySelectorAll('.product-card').forEach(c => c.classList.remove('active'));
  el.classList.add('active');
  updateHeroFromCard(sectionId, el);
  scrollCardIntoView(sectionId, el, instant);
}

function changeProduct(sectionId, dir) {
  const cards = getCards(sectionId);
  if (!cards.length) return;

  let cur = currentProductIndex[sectionId];
  if (typeof cur !== 'number') cur = cards.findIndex(c => c.classList.contains('active'));
  if (cur < 0) cur = 0;

  const next = dir === 'next' ? (cur + 1) % cards.length : (cur - 1 + cards.length) % cards.length;
  const target = cards[next];
  if (target) selectProduct(sectionId, next, target);
}

function snapToNearest(sectionId) {
  const scroller = getScroller(sectionId);
  const cards = getCards(sectionId);
  if (!scroller || !cards.length) return;

  const scrollLeft = scroller.scrollLeft;
  // Trouver la carte la plus proche du bord gauche du viewport scroller
  let nearest = cards[0];
  let best = Math.abs(cards[0].offsetLeft - 10 - scrollLeft);
  for (let i = 1; i < cards.length; i++) {
    const d = Math.abs(cards[i].offsetLeft - 10 - scrollLeft);
    if (d < best) { best = d; nearest = cards[i]; }
  }
  const index = Number(nearest.getAttribute('data-index')) || cards.indexOf(nearest);
  // Eviter de déclencher le clic sélection pendant un drag; on force instant pour le snap final
  isDragScrolling[sectionId] = true;
  scrollCardIntoView(sectionId, nearest, false);
  setTimeout(() => { isDragScrolling[sectionId] = false; }, 120);

  // Mettre à jour l'active visuellement, mais sans bloquer un prochain clic
  const wrap = getWrap(sectionId);
  if (wrap) {
    wrap.querySelectorAll('.product-card').forEach(c => c.classList.remove('active'));
    nearest.classList.add('active');
    currentProductIndex[sectionId] = index;
    updateHeroFromCard(sectionId, nearest);
  }
}

function setupDragScroll(sectionId) {
  const scroller = getScroller(sectionId);
  if (!scroller) return;

  let isDown = false, startX = 0, startScroll = 0, moved = false;

  const release = (e) => {
    if (!isDown) return;
    isDown = false;
    if (moved) {
      isDragScrolling[sectionId] = true;
      snapToNearest(sectionId);
      setTimeout(() => { isDragScrolling[sectionId] = false; }, 100);
    }
    if (e && e.pointerId && scroller.hasPointerCapture(e.pointerId)) {
      scroller.releasePointerCapture(e.pointerId);
    }
  };

  scroller.addEventListener('pointerdown', (e) => {
    isDown = true; moved = false;
    startX = e.clientX; startScroll = scroller.scrollLeft;
    scroller.setPointerCapture(e.pointerId);
  });
  scroller.addEventListener('pointermove', (e) => {
    if (!isDown) return;
    const dx = e.clientX - startX;
    if (Math.abs(dx) > 3) moved = true;
    scroller.scrollLeft = startScroll - dx;
    e.preventDefault();
  }, { passive: false });
  scroller.addEventListener('pointerup', release);
  scroller.addEventListener('pointercancel', release);
  scroller.addEventListener('pointerleave', release);

  // Molette: vertical -> horizontal
  scroller.addEventListener('wheel', (e) => {
    if (Math.abs(e.deltaY) > Math.abs(e.deltaX)) {
      scroller.scrollLeft += e.deltaY;
      e.preventDefault();
    }
  }, { passive: false });
}

// Shopify AJAX add-to-cart
function addToCart(e, btn) {
  const card = btn.closest('.product-card');
  // Sélection visuelle même si on clique seulement sur le bouton
  if (card) {
    const wrap = card.closest('[class*="featured-products-"]');
    if (wrap) {
      const cls = [...wrap.classList].find(c => c.startsWith('featured-products-'));
      if (cls) {
        const sectionId = cls.replace('featured-products-','');
        const idx = Number(card.getAttribute('data-original-index')) || Number(card.getAttribute('data-index')) || 0;
        selectProduct(sectionId, idx, card, true);
      }
    }
  }
  e.stopPropagation();
  const variantId = card ? card.getAttribute('data-variant-id') : null;
  if (!variantId) return;

  const labelDefault = '{{ section.settings.button_text | default: "Shop Now" }}';
  btn.disabled = true;

  fetch('/cart/add.js', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json', 'Accept': 'application/json' },
    body: JSON.stringify({ id: Number(variantId), quantity: 1 })
  })
  .then(r => r.ok ? r.json() : Promise.reject(r))
  .then(() => {
    btn.textContent = 'Added';
    setTimeout(() => { btn.textContent = labelDefault; btn.disabled = false; }, 900);
  })
  .catch(() => {
    btn.textContent = 'Try again';
    setTimeout(() => { btn.textContent = labelDefault; btn.disabled = false; }, 1200);
  });
}

document.addEventListener('DOMContentLoaded', () => {
  const sectionId = '{{ section.id }}';
  setupInfiniteGrow(sectionId);
  setupDragScroll(sectionId);
  // Sélection initiale sur premier original
  const originals = getCards(sectionId).filter(c => !c.hasAttribute('data-clone'));
  if (originals[0]) selectProduct(sectionId, Number(originals[0].getAttribute('data-original-index')), originals[0], true);
});

// --- Carrousel infini (extension dynamique) ---
function setupInfiniteGrow(sectionId) {
  const scroller = getScroller(sectionId);
  if (!scroller) return;
  let originals = [...scroller.querySelectorAll('.product-card:not([data-clone])')];
  if (!originals.length) return;

  // Calcul largeur d'un set (après layout)
  const computeSetWidth = () => {
    // Utiliser position de dernier - premier + largeur dernière
    const first = originals[0];
    const last = originals[originals.length - 1];
    return (last.offsetLeft + last.offsetWidth) - first.offsetLeft;
  };
  let setWidth = computeSetWidth();

  // Ajout initial d'un set avant et après pour permettre scroll dès le début
  const appendSet = () => {
    originals.forEach(card => {
      const clone = card.cloneNode(true);
      clone.setAttribute('data-clone', 'true');
      scroller.appendChild(clone);
    });
  };
  const prependSet = () => {
    for (let i = originals.length - 1; i >= 0; i--) {
      const card = originals[i];
      const clone = card.cloneNode(true);
      clone.setAttribute('data-clone', 'true');
      scroller.insertBefore(clone, scroller.firstChild);
    }
    // Ajuster scroll pour conserver la vue
    scroller.scrollLeft += setWidth;
  };
  appendSet();
  prependSet();

  // Scroll listener: étendre quand on approche des bords
  scroller.addEventListener('scroll', () => {
    const x = scroller.scrollLeft;
    const max = scroller.scrollWidth;
    const rightEdge = x + scroller.clientWidth;

    // Re-calcul périodique (si taille responsive change)
    if (Math.random() < 0.01) setWidth = computeSetWidth();

    // Approche extrémité droite -> ajouter un set après
    if (rightEdge > max - setWidth * 1.2) {
      appendSet();
    }
    // Approche extrémité gauche -> ajouter un set avant
    if (x < setWidth * 0.8) {
      prependSet();
    }
  });

  // Adapter navigation flèches pour ne jamais forcer retour milieu
  if (!window.__featuredInfiniteGrowPatch) {
    const oldChange = changeProduct;
    changeProduct = function(sectionId, dir) {
      // Base sur index original
      const all = getCards(sectionId);
      const originalsNow = all.filter(c => !c.hasAttribute('data-clone'));
      if (!originalsNow.length) return oldChange(sectionId, dir);
      let cur = currentProductIndex[sectionId];
      if (typeof cur !== 'number') {
        const active = all.find(c => c.classList.contains('active'));
        cur = active ? Number(active.getAttribute('data-original-index')) : 0;
      }
      const len = originalsNow.length;
      const targetOriginalIndex = dir === 'next' ? (cur + 1) % len : (cur - 1 + len) % len;
      // Chercher cartes (originales + clones) correspondant à cet index
      const candidates = all.filter(c => Number(c.getAttribute('data-original-index')) === targetOriginalIndex);
      if (!candidates.length) return;
      // Choisir candidate la plus proche du centre actuel
      const center = scroller.scrollLeft + scroller.clientWidth / 2;
      let chosen = candidates[0];
      let best = Infinity;
      candidates.forEach(c => {
        const mid = c.offsetLeft + c.offsetWidth / 2;
        const dist = Math.abs(mid - center);
        if (dist < best) { best = dist; chosen = c; }
      });
      selectProduct(sectionId, targetOriginalIndex, chosen);
    };
    window.__featuredInfiniteGrowPatch = true;
  }

  // Surcharge selectProduct pour utiliser data-original-index si présent
  const _baseSelect = selectProduct;
  selectProduct = function(sectionId, index, el, instant = false) {
    if (el && el.hasAttribute('data-original-index')) {
      index = Number(el.getAttribute('data-original-index')) || index;
    }
    _baseSelect(sectionId, index, el, instant);
  };
}
</script>
